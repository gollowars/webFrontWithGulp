$maxWidth = 1280px

//Color
$baseFontColor = #333333

//Font
$baseFontFamily = "ヒラギノ角ゴ Pro W3" , "Hiragino Kaku Gothic Pro" , "ＭＳ Ｐゴシック" , "MS PGothic" ,"メイリオ",Meiryo, sans-serif
$baseFontSize = 62.5%

// baseStyle
body
  font-family: $baseFontFamily
  font-size: $baseFontSize
  -webkit-font-smoothing: antialiased;
    
h1,h2,h3,h4,h5,h6
  -webkit-font-smoothing: antialiased;
  font-size: 1rem
p
  color: $baseFontColor
  font-size: 1rem

a
  color: $baseFontColor
  text-decoration: none
a:hover
  text-decoration: underline